@model List<FlightIndexViewModel>


@{
    ViewData["Title"] = "Home Page";
}


@{
    var firstFlight = Model.Any() ? Model[0] : null;

    var secondFlight = Model.Count() > 1 ? Model[1] : null;

    var thirdFlight = Model.Count() > 2 ? Model[2] : null;
}

<h2>Flight Offers</h2>


@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Lime family!</h1>
        <p class="lead">There are no flight options currently.Please check again .</p>
        <hr class="my-4">
        <p class="lead">
        <a asp-controller="Planes" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Plane</a>
        </p>
    </div>
}

<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
        <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        @if (firstFlight != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstFlight.ImageUrl" alt="@firstPlane.Brand @firstPlane.Model">
             <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Planes" asp-action="Details" asp-route-id="@firstPlane.Id">@firstPlane.Year @firstPlane.Brand @firstPlane.Model</a></h5>
                </div>
            </div>
        }

        @if (secondFlight != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondPlane.ImageUrl" alt="@secondPlane.Brand @secondPlane.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Planes" asp-action="Details" asp-route-id="@secondPlane.Id">@secondPlane.Year @secondPlane.Brand @secondPlane.Model</a></h5>
                </div>
            </div>
        }

        @if (thirdFlight != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@thirdPlane.ImageUrl" alt="@thirdPlane.Brand @secondPlane.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Planes" asp-action="Details" asp-route-id="@thirdPlane.Id">@thirdPlane.Year @thirdPlane.Brand @thirdPlane.Model</a></h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-target="#carouselExampleCaptions" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-target="#carouselExampleCaptions" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>


