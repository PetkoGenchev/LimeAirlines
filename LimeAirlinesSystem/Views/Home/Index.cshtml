<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="QueryModel.TripType"></label>
                <select asp-for="QueryModel.TripType" class="form-control">

                    @foreach (var triptype in Model.QueryModel.TripTypes)
                    {
                        <option value=@triptype.Id>@triptype.Name</option>
                    }
                </select>
                <span asp-validation-for="QueryModel.TripType" class="small text-danger"></span>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="QueryModel.StartLocation"></label>
                <select asp-for="QueryModel.StartLocation" class="form-control">
                    <option value="">All</option>

                    @foreach (var startlocation in Model.QueryModel.StartLocations)
                    {
                        <option value=@startlocation>@startlocation</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="QueryModel.EndLocation"></label>
                <select asp-for="QueryModel.EndLocation" class="form-control">
                    <option value="">All</option>

                    @foreach (var endlocation in Model.QueryModel.EndLocations)
                    {
                        <option value=@endlocation>@endlocation</option>
                    }

                    @*STARTING AND ENDING LOCATIONS CANNOT BE THE SAME ERROR*@
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="QueryModel.FlightDate"></label>
            <input asp-for="QueryModel.FlightDate" class="form-control" placeholder="Select Date">
            <span asp-validation-for="QueryModel.FlightDate" class="small text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="QueryModel.Passangers"></label>
            <input asp-for="QueryModel.Passangers" class="form-control" placeholder="1,2,3,10...">
        </div>


        <div class="form-group col-md-3">
            <input type="submit" class-"btn btn-primary" value="Search">
        </div>
    </div>
</form>


<h2 class="h2-center">Book a flight</h2>


@if (!Model.CheapestFlight.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Lime family!</h1>
        <p class="lead">There are no flight options currently. Please check again later.</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Flights" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Flight</a>
        </p>
    </div>
}
else
{
    <div class="row flight-form">
        @for (int i = 0; i < Model.CheapestFlight.Count; i++)
        {
            var flight = Model.CheapestFlight[i];

            <div class="col-md-4  flight-promo">
                <div class="card mb-3 card-width">
                    <div class="img-wrapper">
                        <img class="card-img" src="@flight.ImageUrl" alt="@flight.EndLocation @flight.Price">
                    </div>
                    <div class="card-img-overlay">
                        <h5 class="card-title text-left">@flight.EndLocation</h5>
                        <p class="card-text text-white font-weight-bold">From @flight.StartLocation starting BGN @flight.Price</p>
                    </div>
                </div>
            </div>
        }
    </div>


