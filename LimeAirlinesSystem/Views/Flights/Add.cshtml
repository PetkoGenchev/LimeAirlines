@model FlightFormModel

@{
    ViewData["Title"] = "Add Flight";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class-"heading-margin text-center">Add Flight</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="StartLocation"></label>
                    <input asp-for="StartLocation" class="form-control">
                    <span asp-validation-for="StartLocation" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EndLocation"></label>
                    <input asp-for="EndLocation" class="form-control">
                    <span asp-validation-for="EndLocation" class="small text-danger"></span>
                </div>






                <div class="container">
                    <div class='col-md-5'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker6'>
                                <label asp-for="FlightStartDateTime"></label>
                                <input asp-for="FlightStartDateTime" class="form-control">
                                <span asp-validation-for="FlightStartDateTime" class="small text-danger"></span>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class='col-md-5'>
                        <div class="form-group">
                            <div class='input-group date' id='datetimepicker7'>
                                <input type='text' class="form-control" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker6').datetimepicker();
                        $('#datetimepicker7').datetimepicker({
                            useCurrent: false //Important! See issue #1075
                        });
                        $("#datetimepicker6").on("dp.change", function (e) {
                            $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
                        });
                        $("#datetimepicker7").on("dp.change", function (e) {
                            $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
                        });
                    });
                </script>


                @*                <div class="form-group">
                <label asp-for="FlightStartDateTime"></label>
                <input asp-for="FlightStartDateTime" class="form-control">
                <span asp-validation-for="FlightStartDateTime" class="small text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="FlightEndDateTime"></label>
                <input asp-for="FlightEndDateTime" class="form-control" placeholder="Select Date">
                <span asp-validation-for="FlightEndDateTime" class="small text-danger"></span>
                </div>*@

                <div class="form-group">
                    <label asp-for="PlaneId"></label>
                    <select asp-for="PlaneId" class="form-control">
                        @foreach (var plane in Model.Planes)
                        {
                            <option value="@plane.Id">@plane.Year @plane.Brand @plane.Model</option>
                        }
                    </select>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>