@model IEnumerable<PlaneServiceModel>

@{
    ViewBag.Title = "Planes Administration";
}

<h1>All Planes</h1>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Brand</th>
            <th scope="col">Model</th>
            <th scope="col">NumberOfSeats</th>
            <th scope="col">Year</th>
            <th scope="col">Category</th>
            <th scope="col">IsPublic</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plane in Model)
        {
            <tr>
                <td scope="col">@plane.Id</td>
                <td scope="col">@plane.Brand</td>
                <td scope="col">@plane.Model</td>
                <td scope="col">@plane.NumberOfSeats</td>
                <td scope="col">@plane.Year</td>
                <td scope="col">@plane.CategoryName</td>
                <td scope="col">@plane.IsPublic</td>
                <td scope="col">
                    <a asp-area="Admin" asp-controller="Planes" asp-action="Edit" asp-route-id="@plane.Id" class="btn btn-warning float-right ml-3">Edit</a>
                    <a asp-area="Admin" asp-controller="Planes" asp-action="ChangeVisibility" asp-route-id="@plane.Id" class="btn btn-info float-right ml-3">@(plane.IsPublic ? "Hide" : "Show")</a>

                </td>
            </tr>
        }
    </tbody>
</table>